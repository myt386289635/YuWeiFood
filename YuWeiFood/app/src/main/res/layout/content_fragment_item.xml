<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="#ffffff">

    <ImageView
        android:id="@+id/content_fragment_item_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/content_fragment_item_image"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lalala"
        android:textColor="#e1e1e1"
        android:textSize="12dp"
        android:id="@+id/content_fragment_item_price"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/content_fragment_item_image"
        android:id="@+id/content_fragment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="lalala"
        android:layout_marginTop="15dp"/>


    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="160dp"
        android:id="@+id/content_fragment_item_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/content_fragment_item_image"
        android:layout_height="wrap_content"
        android:textColor="#c1c1c1"
        android:textSize="12dp"
        android:text="llalal"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@id/content_fragment_item_image"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c1c1c1"
        android:layout_below="@id/content_fragment_item_image"/>


</RelativeLayout>