<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#ffffff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">


        <ImageView
            android:id="@+id/item_head_imagview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentRight="true"
                android:background="@mipmap/new_city_fav"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageView
                android:background="@mipmap/top_back_1"
                android:layout_width="15dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/item_head_city"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="潮州"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@mipmap/camera_rect"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="攻略锦囊"
            android:textColor="#000000"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@mipmap/str_1"
            android:gravity="center"
            android:text="城市印象"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@mipmap/str_2"
            android:gravity="center"
            android:text="特别推荐"
            android:textColor="#000000"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@mipmap/str_0"
            android:gravity="center"
            android:text="+撰写攻略"
            android:textColor="#000000"
            android:textSize="15dp"/>


    </LinearLayout>
</LinearLayout>