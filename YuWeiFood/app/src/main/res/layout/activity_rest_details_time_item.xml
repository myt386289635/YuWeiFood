<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
    android:background="#ffffff">

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:background="@mipmap/city_cost"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_rest_details_time_item_cost"
            android:text="lalala"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/icon_time"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_rest_details_time_item_openTime"
            android:text="lalala"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:background="@mipmap/icon_phone"/>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_rest_details_time_item_phone"
                android:text="lalala"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="#000000"
                android:layout_below="@id/activity_rest_details_time_item_phone"
                android:layout_alignLeft="@id/activity_rest_details_time_item_phone"
                android:layout_alignRight="@id/activity_rest_details_time_item_phone"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>